<?xml version="1.0" encoding="utf-8"?>
<com.yashoid.sequencelayout.SequenceLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:sequences="@xml/sequences_packlist">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_onboarding_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:text="@string/packlist_onboarding_title"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_onboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="16sp"
        android:gravity="center"
        android:text="@string/packlist_onboarding"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="18sp"
        android:textColor="@color/default_background"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_pack"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.yashoid.sequencelayout.SequenceLayout>